{
  "manifest_version": 3,
  "name": "Easy Input",
  "version": "2.3",
  "description": "模拟键盘输入实现文本粘贴。",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardRead"
  ],
 "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.html", "styles.css", "popup.js"],
      "matches": ["<all_urls>"]
    }
  ]
}